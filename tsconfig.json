{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "strict": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "types": ["vite/client", "node", "electron"]
  },
  "include": ["src/**/*", "electron/**/*"],
  "exclude": ["node_modules", "dist"]
}
